# Project
COMPOSE_PROJECT_NAME=fhirhub

# Docker Hub
DOCKERHUB_USERNAME=your-dockerhub-username
IMAGE_TAG=latest

# Image Versions
POSTGRES_VERSION=18-alpine
HAPI_FHIR_VERSION=latest
KEYCLOAK_VERSION=26.0

# Ports
HAPI_PORT=8080
KEYCLOAK_PORT=8180
API_PORT=5197
FRONTEND_PORT=7002

# Domain Configuration
FHIRHUB_DOMAIN=fhirhub.davidle.dev
FHIRHUB_API_DOMAIN=api.fhirhub.davidle.dev
FHIRHUB_AUTH_DOMAIN=auth.fhirhub.davidle.dev

# HAPI FHIR Database
HAPI_DB_NAME=hapi
HAPI_DB_USER=hapi
HAPI_DB_PASSWORD=changeme-hapi-password

# Keycloak Database
KC_DB_NAME=keycloak
KC_DB_USER=keycloak
KC_DB_PASSWORD=changeme-keycloak-password

# Keycloak Admin
KC_ADMIN_USER=admin
KC_ADMIN_PASSWORD=changeme-admin-password
KC_REALM=fhirhub
KC_CLIENT_ID=fhirhub-frontend
KC_BACKEND_CLIENT_ID=fhirhub-backend
KC_BACKEND_CLIENT_SECRET=changeme-backend-secret
KC_HOSTNAME=auth.example.com

# Frontend Build Args
NEXT_PUBLIC_API_URL=http://localhost:5197
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8180
NEXT_PUBLIC_KEYCLOAK_REALM=fhirhub
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=fhirhub-frontend
